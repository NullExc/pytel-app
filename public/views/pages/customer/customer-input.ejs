                    <input id="name" type="text">
                    <label id="name-label" for="name">Názov</label>
                </div>
            </div>

            <div class="col s12 panel z-depth-4">
                <div class="col s12" style="margin-top: 20px;">
                    <h5>Adresa</h5>
                </div>

                <div class="col s9">
                    <div class="input-field">
                        <input id="company-street" type="text">
                        <label id="company-street-label" for="company-street">Ulica</label>
                    </div>
                </div>
                <div class="col s3">
                    <div class="input-field">
                        <input id="company-num" type="text">
                        <label id="company-num-label" for="company-num">Číslo</label>
                    </div>
                </div>

                <div class="col s9">
                    <div class="input-field">
                        <input id="company-city" type="text">
                        <label id="company-city-label" for="company-city">Mesto</label>
                    </div>
                </div>
                <div class="col s3">
                    <div class="input-field">
                        <input id="company-zip" type="text">
                        <label id="company-zip-label" for="company-zip">PSČ</label>
                    </div>
                </div>
            </div>

            <div class="col s12 panel z-depth-4">
                <div class="col s12" style="margin-top: 20px;">
                    <h5>Fakturačné údaje</h5>
                </div>

                <div class="col s12">
                    <div class="input-field">
                        <input id="ico" type="text">
                        <label id="ico-label" for="ico">IČO</label>
                    </div>
                </div>

                <div class="col s12">
                    <div class="input-field">
                        <input id="icdph" type="text">
