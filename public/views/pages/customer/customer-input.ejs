<form id="person-form" class="" style="margin-top: 20px;">
    <div class="row">
        <div class="col l6 s12 offset-l3">
            <div class="col s12 panel z-depth-4">
                <h5>Názov fyzickej osoby</h5>
                <div class="input-field col s6">
                    <input id="first" type="text">
                    <label id="first-label" for="first">Meno</label>
                </div>
                <div class="input-field col s6">
                    <input id="last" type="text">
                    <label id="last-label" for="last">Priezvisko</label>
                </div>
            </div>

            <div class="col s12 panel z-depth-4">
                <div class="col s12">
                    <h5>Kontakt</h5>
                </div>
                <div class="input-field col s6">
                    <input id="email" type="text">
                    <label id="email-label" for="email">E-mail</label>
                </div>
                <div class="input-field col s6">
                    <input id="phone" type="text">
                    <label id="phone-label" for="phone">Mobil</label>
                </div>
            </div>

            <div class="col s12 panel z-depth-4">
                <div class="col s12" style="margin-top: 20px;">
                    <h5>Adresa</h5>
                </div>

                <div class="col s9">
                    <div class="input-field">
                        <input id="person-street" type="text">
                        <label id="person-street-label" for="person-street">Ulica</label>
                    </div>
                </div>
                <div class="col s3">
                    <div class="input-field">
                        <input id="person-num" type="text">
                        <label id="person-num-label" for="person-num">Číslo</label>
                    </div>
                </div>

                <div class="col s9">
                    <div class="input-field">
                        <input id="person-city" type="text">
                        <label id="person-city-label" for="person-city">Mesto</label>
                    </div>
                </div>
                <div class="col s3">
                    <div class="input-field">
                        <input id="person-zip" type="text">
                        <label id="person-zip-label" for="person-zip">PSČ</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<form id="company-form" style="margin-top: 20px;">
    <div class="row">
        <div class="col l6 s12">
            <div class="col s12 panel z-depth-4">
                <h5>Názov právnickej osoby</h5>
